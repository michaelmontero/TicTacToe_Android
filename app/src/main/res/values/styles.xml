<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar"/>

    <style name="tittle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textTittle</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/minButtonWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/minButtonWidth</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/textTittle</item>
    </style>

    <style name="radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="casillas">
        <item name="android:layout_width">@dimen/casilla</item>
        <item name="android:layout_height">@dimen/casilla</item>
        <item name="android:src">@drawable/casilla</item>
    </style>
</resources>

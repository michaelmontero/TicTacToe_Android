<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/generalPadding"
    android:weightSum = "100"
    android:orientation="horizontal"
    android:background="@drawable/background"
    tools:context="com.example.elleu.tictactoe_android.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/tittle"
            android:text="@string/app_name"
        />
        <Button
            android:id="@+id/onePlayer"
            android:text="@string/onePlayer"
            style="@style/button" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/easy_difficult"
                android:id="@+id/easyDifificult"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normal_difficult"
                android:id="@+id/normalDifificult"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hard_difficult"
                android:id="@+id/hardDifificult"/>

        </RadioGroup>
        <Button
            android:id="@+id/twoPlayer"
            android:text="@string/twoPlayer"
            style="@style/button" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="30"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_weight="42.15">

        <ImageView
            style="@style/casillas"
            android:id="@+id/a1" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/a2" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/a3" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/b1" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/b2" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/b3" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/c1" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/c2" />
        <ImageView
            style="@style/casillas"
            android:id="@+id/c3" />

    </GridLayout>
</LinearLayout>
